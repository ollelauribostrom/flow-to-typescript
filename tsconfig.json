{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "preserveConstEnums": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "exclude": [
    "**/*.js.flow",
    "dist/**"
  ]
}
